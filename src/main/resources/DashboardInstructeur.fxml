<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tn.esprit.controllers.category.CategoriesStatisticsController"
      spacing="20" style="-fx-background-color: #f4f4f9; -fx-padding: 20;">

    <Label text="Statistiques des Categories" style="-fx-font-size: 24; -fx-font-weight: bold;"/>

    <Label fx:id="totalCategoriesLabel" style="-fx-font-size: 16;"/>

    <StackPane style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        <VBox spacing="20" style="-fx-padding: 20;">
            <HBox spacing="30" alignment="CENTER">
                <!-- Pie Chart -->
                <VBox spacing="10" alignment="CENTER">
                    <Label text="Distribution par Categorie" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                    <PieChart fx:id="categoriePieChart" prefWidth="350" prefHeight="300"/>
                </VBox>

                <!-- Bar Chart -->
                <VBox spacing="10" alignment="CENTER">
                    <Label text="Formations par Categorie" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                    <BarChart fx:id="categorieBarChart" prefWidth="450" prefHeight="300">
                        <xAxis>
                            <CategoryAxis fx:id="xAxis"/>
                        </xAxis>
                        <yAxis>
                            <NumberAxis fx:id="yAxis"/>
                        </yAxis>
                    </BarChart>
                </VBox>
            </HBox>
        </VBox>
    </StackPane>
</VBox>