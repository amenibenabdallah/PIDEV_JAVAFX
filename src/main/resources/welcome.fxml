<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllers.WelcomController">

    <center>
        <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #ffffff;" prefHeight="400.0">
            <Label fx:id="welcomeLabel" text="Bienvenue !" textAlignment="CENTER" style="-fx-font-size: 28px; -fx-font-family: 'Arial Bold';"/>
            <Label text="Nous sommes heureux de vous revoir." textAlignment="CENTER" style="-fx-font-size: 16px; -fx-font-family: 'Arial';"/>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="10.0" prefHeight="40.0" style="-fx-background-color: #f1f1f1;">
            <Label text="© 2025 Formini. Tous droits réservés." style="-fx-font-size: 12px; -fx-font-family: 'Arial';"/>
        </HBox>
    </bottom>

</BorderPane>
