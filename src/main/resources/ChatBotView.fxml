<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tn.esprit.controllers.ChatBotController">
    <Label text="Assistant IA - ChatBot" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 0 0 10 0;"/>
    <TextArea fx:id="chatArea" editable="false" wrapText="true" prefHeight="320" prefWidth="420"/>
    <HBox spacing="5" alignment="CENTER">
        <TextField fx:id="userInput" promptText="Posez votre question..." HBox.hgrow="ALWAYS"/>
        <Button text="Envoyer" onAction="#handleSend"/>
    </HBox>
</VBox> 