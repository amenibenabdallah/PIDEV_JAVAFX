<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<StackPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="tn.esprit.controllers.ChatBotController"
           alignment="CENTER" >

    <VBox spacing="18" alignment="CENTER" maxWidth="480">
        <Label text="Assistant IA - ChatBot" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
        <ListView fx:id="chatListView" prefHeight="340" prefWidth="420"/>
        <HBox spacing="8" alignment="CENTER">
            <TextField fx:id="userInputField" promptText="Posez votre question..." HBox.hgrow="ALWAYS"/>
            <Button fx:id="sendButton" text="Envoyer" onAction="#sendMessage"/>
        </HBox>
    </VBox>
</StackPane>