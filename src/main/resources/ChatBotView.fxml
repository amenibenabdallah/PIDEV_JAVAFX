<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<StackPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="tn.esprit.controllers.ChatBotController"
           alignment="CENTER">
    <stylesheets>
        <URL value="@styles/chatbot.css"/>
    </stylesheets>
    <VBox spacing="18" alignment="CENTER" maxWidth="480" styleClass="vbox">
        <Label text="Assistant IA - ChatBot" styleClass="label"/>
        <TextArea fx:id="chatArea" editable="false" wrapText="true" prefHeight="340" prefWidth="420" styleClass="text-area"/>
        <HBox spacing="8" alignment="CENTER">
            <TextField fx:id="userInput" promptText="Posez votre question..." HBox.hgrow="ALWAYS" styleClass="text-field"/>
            <Button text="Envoyer" onAction="#handleSend" styleClass="button"/>
        </HBox>
    </VBox>
</StackPane>