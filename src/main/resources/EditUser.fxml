<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllers.EditUserController"
            style="-fx-background-color: linear-gradient(to bottom, #f7fafc, #e2e8f0);">

    <VBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="30" AnchorPane.bottomAnchor="30"
          AnchorPane.leftAnchor="40" AnchorPane.rightAnchor="40"
          style="-fx-background-color: white; -fx-background-radius: 16; -fx-padding: 30;">

        <Label text="Modifier l'utilisateur"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2d3748;" />

        <TextField fx:id="nomField" promptText="Nom complet"
                   style="-fx-background-color: #f1f5f9; -fx-padding: 10; -fx-background-radius: 8;" />

        <TextField fx:id="emailField" promptText="Email"
                   style="-fx-background-color: #f1f5f9; -fx-padding: 10; -fx-background-radius: 8;" />

        <TextField fx:id="roleField" promptText="RÃ´le"
                   style="-fx-background-color: #f1f5f9; -fx-padding: 10; -fx-background-radius: 8;" />

        <HBox spacing="20" alignment="CENTER">
            <Button text="Enregistrer" onAction="#handleSave"
                    style="-fx-background-color: linear-gradient(to right, #4f46e5, #6366f1); -fx-text-fill: white;
                           -fx-background-radius: 10; -fx-padding: 10 30;" />
            <Button text="Annuler" onAction="#handleCancel"
                    style="-fx-background-color: #e53e3e; -fx-text-fill: white;
                           -fx-background-radius: 10; -fx-padding: 10 30;" />
        </HBox>
    </VBox>
</AnchorPane>
