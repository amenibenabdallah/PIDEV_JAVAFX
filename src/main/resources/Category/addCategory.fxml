<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="492.0" prefWidth="871.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.category.AddCategorie">

    <children>
        <!-- Header Pane -->
        <Pane prefHeight="61.0" prefWidth="1126.0" style="-fx-background-color: #b80909;">
            <children>
                <Label layoutX="13.0" layoutY="12.0" text="Category Manager" textFill="WHITE">
                    <font>
                        <Font name="Arial Rounded MT Bold" size="30.0" />
                    </font>
                </Label>

            </children>
        </Pane>

        <!-- Main Form Pane -->
        <Pane fx:id="pnCategoryForm" layoutX="411.0" layoutY="88.0" prefHeight="374.0" prefWidth="443.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 10px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);">
            <children>
                <!-- Category Name -->
                <Label layoutX="27.0" layoutY="47.0" text="Nom de la catégorie :" textFill="#b80909">
                    <font>
                        <Font name="System Italic" size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="categoryNameTextField" layoutX="172.0" layoutY="44.0" prefHeight="17.0" prefWidth="257.0" />
                <TextArea fx:id="descriptionTextArea" layoutX="172.0" layoutY="121.0" prefHeight="119.0" prefWidth="257.0" />

                <!-- Error Messages -->
                <Label fx:id="categoryNameErrorLabel" layoutX="187.0" layoutY="135.0" prefHeight="17.0" prefWidth="400.0" textFill="red" />
                <Label fx:id="descriptionErrorLabel" layoutX="187.0" layoutY="205.0" prefHeight="17.0" prefWidth="400.0" textFill="red" />

                <!-- Add Button -->
                <Button layoutX="197.0" layoutY="293.0" mnemonicParsing="false" onAction="#handleAddCategory" prefHeight="42.0" prefWidth="208.0" style="-fx-background-color:  #b80909; -fx-text-fill: white; -fx-font-size: 10pt; -fx-padding: 10px 20px; -fx-background-radius: 20px;" text="Ajouter" />

                <!-- Description -->
                <Label layoutX="27.0" layoutY="125.0" text="Description :" textFill="#b80909">
                    <font>
                        <Font name="System Italic" size="14.0" />
                    </font>
                </Label>
            </children>
        </Pane>

        <!-- Image -->
        <ImageView fitHeight="183.0" fitWidth="233.0" layoutX="108.0" layoutY="200.0" pickOnBounds="true" preserveRatio="true">
            <image>

            </image>
        </ImageView>

        <!-- Form Title -->
        <Label layoutX="31.0" layoutY="179.0" prefHeight="42.0" prefWidth="322.0" text="Ajouter une nouvelle catégorie" textFill="#b80909">
            <font>
                <Font name="System Bold Italic" size="20.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
