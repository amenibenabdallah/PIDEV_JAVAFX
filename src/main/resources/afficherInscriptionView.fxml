            fx:controller="tn.esprit.controllers.AfficherInscriptionsViewController"
            prefHeight="500.0" prefWidth="900.0"
            style="-fx-background-color: #f4f6f9;">


    <VBox spacing="20" alignment="TOP_CENTER"
