<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllers.LoginController"
            style="-fx-background-color: #fff5f5;">

    <HBox prefWidth="900.0" prefHeight="500.0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
          AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">

        <!-- FORMULAIRE DE CONNEXION -->
        <StackPane prefWidth="450.0" style="-fx-background-color: white;">
            <VBox alignment="CENTER" spacing="20.0">
                <Label text="Connexion"
                       style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2d3436;" />

                <TextField fx:id="emailField" promptText="Adresse email"
                           style="-fx-background-radius: 12; -fx-background-color: #f8f8f8; -fx-padding: 10;" />

                <PasswordField fx:id="passwordField" promptText="Mot de passe"
                               style="-fx-background-radius: 12; -fx-background-color: #f8f8f8; -fx-padding: 10;" />

                <Hyperlink text="Mot de passe oublié ?" style="-fx-text-fill: #aaa;" />

                <Button text="Connexion" onAction="#seConnecter"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 12; -fx-padding: 10 25;" />

                <HBox alignment="CENTER" spacing="5.0">
                    <Label text="Pas encore de compte ?" />
                    <Hyperlink text="Créer un compte" onAction="#goToInscription" style="-fx-text-fill: #e74c3c;" />
                </HBox>
            </VBox>
        </StackPane>

        <!-- CÔTÉ BIENVENUE -->
        <StackPane prefWidth="450.0"
                   style="-fx-background-color: linear-gradient(to bottom right, #e74c3c, #f1948a);">
            <VBox alignment="CENTER" spacing="20.0">
                <ImageView fitWidth="100.0" fitHeight="100.0" preserveRatio="true"
                           style="-fx-effect: dropshadow(gaussian, white, 10, 0.3, 0, 0);">
                    <image>
                        <Image url="@images/formini.jpeg" />
                    </image>
                </ImageView>

                <Label text="Welcome to Formini"
                       style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;" />

                <Label text="Connectez-vous pour continuer"
                       wrapText="true"
                       style="-fx-text-fill: white; -fx-font-size: 16px; -fx-alignment: center;" />
            </VBox>
        </StackPane>
    </HBox>
</AnchorPane>
