<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="500.0"
            style="-fx-background-color: linear-gradient(to bottom right, #2d3436, #353b48);"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllers.InscriptionController">

    <children>
        <VBox alignment="TOP_CENTER" spacing="15.0" prefHeight="560.0" prefWidth="460.0"
              AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">

            <!-- Titre -->
            <children>
                <Label text="Formulaire d'inscription"
                       style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #ecf0f1; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 6, 0, 0, 2);">
                    <font>
                        <Font name="System Bold" size="22.0"/>
                    </font>
                </Label>

                <Label text="Veuillez remplir tous les champs"
                       style="-fx-text-fill: #b2bec3; -fx-font-size: 12px;"/>

                <!-- Conteneur -->
                <VBox style="-fx-background-color: rgba(255, 255, 255, 0.95); -fx-background-radius: 10;
                              -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 3);">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>
                    <spacing>12</spacing>

                    <!-- Formulaire -->
                    <GridPane hgap="10" vgap="12">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="30"/>
                            <ColumnConstraints percentWidth="70"/>
                        </columnConstraints>

                        <!-- Nom -->
                        <Label text="Nom :" GridPane.rowIndex="0" GridPane.columnIndex="0"
                               style="-fx-font-weight: bold; -fx-text-fill: #2d3436; -fx-font-size: 12px;"/>
                        <TextField fx:id="nomField" promptText="Entrez votre nom" GridPane.rowIndex="0" GridPane.columnIndex="1"
                                   style="-fx-background-radius: 5; -fx-border-color: #353b48; -fx-border-radius: 5; -fx-background-color: #ecf0f1;
                                          -fx-prompt-text-fill: #636e72; -fx-padding: 8; -fx-font-size: 12px;"/>

                        <!-- Prénom -->
                        <Label text="Prénom :" GridPane.rowIndex="1" GridPane.columnIndex="0"
                               style="-fx-font-weight: bold; -fx-text-fill: #2d3436; -fx-font-size: 12px;"/>
                        <TextField fx:id="prenomField" promptText="Entrez votre prénom" GridPane.rowIndex="1" GridPane.columnIndex="1"
                                   style="-fx-background-radius: 5; -fx-border-color: #353b48; -fx-border-radius: 5; -fx-background-color: #ecf0f1;
                                          -fx-prompt-text-fill: #636e72; -fx-padding: 8; -fx-font-size: 12px;"/>

                        <!-- Email -->
                        <Label text="Email :" GridPane.rowIndex="2" GridPane.columnIndex="0"
                               style="-fx-font-weight: bold; -fx-text-fill: #2d3436; -fx-font-size: 12px;"/>
                        <TextField fx:id="emailField" promptText="Entrez votre email" GridPane.rowIndex="2" GridPane.columnIndex="1"
                                   style="-fx-background-radius: 5; -fx-border-color: #353b48; -fx-border-radius: 5; -fx-background-color: #ecf0f1;
                                          -fx-prompt-text-fill: #636e72; -fx-padding: 8; -fx-font-size: 12px;"/>

                        <!-- Mot de passe -->
                        <Label text="Mot de passe :" GridPane.rowIndex="3" GridPane.columnIndex="0"
                               style="-fx-font-weight: bold; -fx-text-fill: #2d3436; -fx-font-size: 12px;"/>
                        <PasswordField fx:id="passwordField" promptText="Mot de passe" GridPane.rowIndex="3" GridPane.columnIndex="1"
                                       style="-fx-background-radius: 5; -fx-border-color: #353b48; -fx-border-radius: 5; -fx-background-color: #ecf0f1;
                                              -fx-prompt-text-fill: #636e72; -fx-padding: 8; -fx-font-size: 12px;"/>

                        <!-- Confirmation mot de passe -->
                        <PasswordField fx:id="confirmPasswordField" promptText="Confirmer le mot de passe" GridPane.rowIndex="4" GridPane.columnIndex="1"
                                       style="-fx-background-radius: 5; -fx-border-color: #353b48; -fx-border-radius: 5; -fx-background-color: #ecf0f1;
                                              -fx-prompt-text-fill: #636e72; -fx-padding: 8; -fx-font-size: 12px;"/>

                        <!-- Date de naissance -->
                        <Label text="Date de naissance :" GridPane.rowIndex="5" GridPane.columnIndex="0"
                               style="-fx-font-weight: bold; -fx-text-fill: #2d3436; -fx-font-size: 12px;"/>
                        <DatePicker fx:id="datePicker" GridPane.rowIndex="5" GridPane.columnIndex="1"
                                    style="-fx-background-radius: 5; -fx-border-color: #353b48; -fx-border-radius: 5; -fx-background-color: #ecf0f1;
                                           -fx-font-size: 12px;"/>

                        <!-- Rôle -->
                        <Label text="Rôle :" GridPane.rowIndex="6" GridPane.columnIndex="0"
                               style="-fx-font-weight: bold; -fx-text-fill: #2d3436; -fx-font-size: 12px;"/>
                        <ComboBox fx:id="rolesCombo" GridPane.rowIndex="6" GridPane.columnIndex="1"
                                  style="-fx-background-radius: 5; -fx-border-color: #353b48; -fx-border-radius: 5; -fx-background-color: #ecf0f1;
                                         -fx-font-size: 12px;">
                            <items>
                                <FXCollections fx:factory="observableArrayList"/>
                            </items>
                        </ComboBox>

                        <!-- Niveau d'étude -->
                        <Label text="Niveau d'étude :" GridPane.rowIndex="7" GridPane.columnIndex="0"
                               style="-fx-font-weight: bold; -fx-text-fill: #2d3436; -fx-font-size: 12px;"/>
                        <ComboBox fx:id="niveauCombo" GridPane.rowIndex="7" GridPane.columnIndex="1"
                                  style="-fx-background-radius: 5; -fx-border-color: #353b48; -fx-border-radius: 5; -fx-background-color: #ecf0f1;
                                         -fx-font-size: 12px;">
                            <items>
                                <FXCollections fx:factory="observableArrayList"/>
                            </items>
                        </ComboBox>

                        <!-- Image -->
                        <Label text="Image :" GridPane.rowIndex="8" GridPane.columnIndex="0"
                               style="-fx-font-weight: bold; -fx-text-fill: #2d3436; -fx-font-size: 12px;"/>
                        <HBox spacing="8" alignment="CENTER_LEFT" GridPane.rowIndex="8" GridPane.columnIndex="1">
                            <Button text="Choisir une image" onAction="#choisirImage"
                                    style="-fx-background-color: linear-gradient(to right, #e74c3c, #ff7675); -fx-text-fill: #ffffff;
                                           -fx-background-radius: 5; -fx-font-weight: bold; -fx-padding: 6 15 6 15;
                                           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 6, 0, 0, 2); -fx-font-size: 12px;"/>
                            <Label fx:id="imageLabel" text="Aucune image sélectionnée" style="-fx-text-fill: #636e72; -fx-font-size: 12px;"/>
                            <ImageView fx:id="imagePreview" fitHeight="80.0" fitWidth="80.0" preserveRatio="true"/>
                        </HBox>

                        <!-- Spécialité -->
                        <Label text="Spécialité :" fx:id="lblSpecialite" GridPane.rowIndex="9" GridPane.columnIndex="0"
                               style="-fx-font-weight: bold; -fx-text-fill: #2d3436; -fx-font-size: 12px;" visible="false"/>
                        <TextField fx:id="specialiteField" promptText="Votre spécialité" GridPane.rowIndex="9" GridPane.columnIndex="1"
                                   style="-fx-background-radius: 5; -fx-border-color: #353b48; -fx-border-radius: 5; -fx-background-color: #ecf0f1;
                                          -fx-prompt-text-fill: #636e72; -fx-padding: 8; -fx-font-size: 12px;" visible="false"/>

                        <!-- CV -->
                        <Label text="CV :" fx:id="lblCV" GridPane.rowIndex="10" GridPane.columnIndex="0"
                               style="-fx-font-weight: bold; -fx-text-fill: #2d3436; -fx-font-size: 12px;" visible="false"/>
                        <HBox spacing="8" alignment="CENTER_LEFT" GridPane.rowIndex="10" GridPane.columnIndex="1">
                            <Button fx:id="btnChoisirCV" text="Choisir un CV" onAction="#choisirCV"
                                    style="-fx-background-color: linear-gradient(to right, #e74c3c, #ff7675); -fx-text-fill: #ffffff;
                                           -fx-background-radius: 5; -fx-font-weight: bold; -fx-padding: 6 15 6 15;
                                           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 6, 0, 0, 2); -fx-font-size: 12px;" visible="false"/>
                            <Label fx:id="cvLabel" text="Aucun CV sélectionné" style="-fx-text-fill: #636e72; -fx-font-size: 12px;" visible="false"/>
                        </HBox>

                        <rowConstraints>
                            <RowConstraints/><RowConstraints/><RowConstraints/><RowConstraints/><RowConstraints/>
                            <RowConstraints/><RowConstraints/><RowConstraints/><RowConstraints/>
                            <RowConstraints/><RowConstraints/>
                        </rowConstraints>
                    </GridPane>
                </VBox>

                <!-- Bouton d'inscription -->
                <Button fx:id="btnInscrire" text="S'inscrire" onAction="#inscrireApprenant"
                        style="-fx-background-color: linear-gradient(to right, #e74c3c, #ff7675); -fx-text-fill: #ffffff;
                               -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 10 30 10 30; -fx-font-size: 13px;
                               -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 8, 0, 0, 2);">
                    <font>
                        <Font name="System Bold" size="13.0"/>
                    </font>
                </Button>

                <!-- Lien de connexion -->
                <HBox alignment="CENTER" spacing="5">
                    <Label text="Déjà un compte ?" style="-fx-text-fill: #b2bec3; -fx-font-size: 12px;"/>
                    <Hyperlink text="Connectez-vous" onAction="#goToLogin"
                               style="-fx-text-fill: #ff7675; -fx-font-weight: bold; -fx-font-size: 12px;"/>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>