<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="tn.esprit.controllers.AddAvis"
          alignment="CENTER" hgap="10" vgap="10" style="-fx-padding: 20;">

    <!-- Title -->
    <Label text="Add New Avis" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"
           style="-fx-font-size: 16px; -fx-font-weight: bold;" GridPane.halignment="CENTER"/>

    <!-- Note (Rating) -->
    <Label text="Rating:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <ComboBox fx:id="noteComboBox" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="200"/>

    <!-- Commentaire -->
    <Label text="Comment:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="commentaireTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" prefWidth="200"/>

    <!-- Formation ID -->
    <Label text="Formation ID:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <ComboBox fx:id="formationIdComboBox" GridPane.columnIndex="1" GridPane.rowIndex="3" prefWidth="200"/>

    <!-- Buttons -->
    <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="2" GridPane.halignment="CENTER">
        <Button text="Add Avis" onAction="#handleAddAvis" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Cancel" onAction="#handleCancel" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
    </HBox>

</GridPane>
