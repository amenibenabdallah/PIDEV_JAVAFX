<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<VBox fx:id="addAvisForm" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tn.esprit.controllers.AddAvis"
      spacing="20" style="-fx-padding: 20;"
      stylesheets="@ListAvisStyle.css">

    <!-- Title -->
    <Label text="Add New Avis" styleClass="form-title-label"/>

    <!-- Rating Field (Stars) -->
    <HBox spacing="10">
        <Label text="Rating:" styleClass="form-label"/>
        <HBox fx:id="ratingBox" spacing="5">
            <Label fx:id="star1" text="★" styleClass="star" onMouseClicked="#handleStarClick"/>
            <Label fx:id="star2" text="★" styleClass="star" onMouseClicked="#handleStarClick"/>
            <Label fx:id="star3" text="★" styleClass="star" onMouseClicked="#handleStarClick"/>
            <Label fx:id="star4" text="★" styleClass="star" onMouseClicked="#handleStarClick"/>
            <Label fx:id="star5" text="★" styleClass="star" onMouseClicked="#handleStarClick"/>
        </HBox>
    </HBox>

    <!-- Comment Field -->
    <VBox spacing="5">
        <Label text="Comment:" styleClass="form-label"/>
        <TextArea fx:id="commentaireField" wrapText="true" styleClass="form-text-area"/>
    </VBox>

    <!-- Formation Field -->
    <HBox spacing="10">
        <Label text="Formation:" styleClass="form-label"/>
        <ComboBox fx:id="formationComboBox" value="1" styleClass="form-combo-box">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="1"/>
                </FXCollections>
            </items>
        </ComboBox>
    </HBox>

    <!-- Buttons -->
    <HBox spacing="20" alignment="CENTER">
        <Button text="Add Avis" onAction="#handleAdd" styleClass="button,add-button"/>
        <Button text="Cancel" onAction="#handleCancel" styleClass="button,cancel-button"/>
    </HBox>

</VBox>