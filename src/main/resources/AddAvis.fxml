<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="tn.esprit.controllers.AddAvis"
          hgap="10" vgap="15" style="-fx-padding: 20;"
          stylesheets="@AddAvisStyles.css">

    <!-- Title -->
    <Label text="Add New Avis" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"
           styleClass="title-label" GridPane.halignment="CENTER"/>

    <!-- Star Rating -->
    <Label text="Rating:" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="label"/>
    <HBox fx:id="starRatingBox" spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <!-- Comment -->
    <Label text="Comment:" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="label"/>
    <TextArea fx:id="commentaireTextField" prefWidth="400" prefHeight="100" GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="text-area"/>

    <!-- Formation ID -->
    <Label text="Formation :" GridPane.columnIndex="0" GridPane.rowIndex="3" styleClass="label"/>
    <ComboBox fx:id="formationIdComboBox" prefWidth="400" GridPane.columnIndex="1" GridPane.rowIndex="3" styleClass="combo-box"/>

    <!-- Buttons -->
    <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="2" GridPane.halignment="CENTER">
        <Button text="Add Avis" onAction="#handleAddAvis" styleClass="button,add-button"/>
        <Button text="Cancel" onAction="#handleCancel" styleClass="button,cancel-button"/>
    </HBox>

</GridPane>