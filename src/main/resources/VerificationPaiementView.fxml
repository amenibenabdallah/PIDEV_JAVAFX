<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox alignment="CENTER" spacing="20"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tn.esprit.controllers.VerificationPaiementController"
      prefWidth="350" prefHeight="220"
      style="-fx-background-color: white; -fx-background-radius: 14px; -fx-effect: dropshadow(three-pass-box, rgba(50,50,93,0.12), 16, 0, 0, 0); -fx-padding: 30;">
    <Label text="✅ Paiement validé !" style="-fx-font-size: 22px; -fx-text-fill: #27ae60; -fx-font-weight: bold;"/>
    <Label text="Merci, votre paiement a bien été pris en compte." style="-fx-font-size: 16px;"/>
    <Button fx:id="closeButton" text="Fermer" onAction="#handleClose"
            style="-fx-background-color: #635bff; -fx-text-fill: white; -fx-font-size: 15px; -fx-background-radius: 8px; -fx-padding: 8px 24px;"/>
</VBox> 