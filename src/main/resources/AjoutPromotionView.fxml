<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="tn.esprit.controllers.AjoutPromotionViewController"
           stylesheets="@style.css"
           styleClass="background"
           prefWidth="800" prefHeight="700">

    <!-- Conteneur centré -->
    <VBox alignment="CENTER" spacing="20">

        <!-- Carte blanche centrée -->
        <VBox spacing="20" styleClass="form-box" alignment="CENTER">
            <Label text="Nouvelle Promotion" styleClass="form-title"/>

            <GridPane hgap="10" vgap="15" alignment="CENTER">
                <padding><Insets top="10" right="20" bottom="10" left="20"/></padding>

                <Label text="Code Promo :" styleClass="form-label" GridPane.rowIndex="0"/>
                <TextField fx:id="codeField" promptText="Ex: PROMO2024" styleClass="form-field" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Description :" styleClass="form-label" GridPane.rowIndex="1"/>
                <TextArea fx:id="descriptionField" promptText="Description détaillée..." styleClass="form-field"
                          wrapText="true" prefRowCount="3" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Remise (%) :" styleClass="form-label" GridPane.rowIndex="2"/>
                <TextField fx:id="remiseField" promptText="Ex: 15.5" styleClass="form-field" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Date d'expiration :" styleClass="form-label" GridPane.rowIndex="3"/>
                <DatePicker fx:id="dateExpirationField" styleClass="form-field" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="ID Inscription :" styleClass="form-label" GridPane.rowIndex="4"/>
                <TextField fx:id="inscriptionIdField" promptText="Numérique" styleClass="form-field" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <Label text="ID Apprenant :" styleClass="form-label" GridPane.rowIndex="5"/>
                <TextField fx:id="apprenantIdField" promptText="Numérique" styleClass="form-field" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                <HBox spacing="15" alignment="CENTER" GridPane.rowIndex="6" GridPane.columnSpan="2">
                    <Button text="Annuler" onAction="#handleAnnuler" styleClass="danger-btn"/>
                    <Button text="Ajouter" onAction="#handleAjouter" styleClass="success-btn"/>
                </HBox>

                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="130"/>
                    <ColumnConstraints hgrow="ALWAYS" prefWidth="250"/>
                </columnConstraints>
            </GridPane>
        </VBox>
    </VBox>
</StackPane>
