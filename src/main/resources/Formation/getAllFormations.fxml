<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.Formation.GetAllFormationBack">
    <children>
        <!-- AddFormation Button -->
        <HBox layoutX="20.0" layoutY="20.0">
            <Button fx:id="ajouterButton" text="Ajouter Formation" onAction="#handleAjouterFormation"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold;" />
        </HBox>

        <!-- ScrollPane containing the cards -->
        <ScrollPane layoutX="20.0" layoutY="70.0" prefHeight="500.0" prefWidth="760.0" style="-fx-background: white; -fx-border-color: lightgray;">
            <content>
                <GridPane fx:id="cardsGrid" hgap="20" vgap="20" style="-fx-padding: 20;">
                    <!-- Cards will be added programmatically here -->
                </GridPane>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>