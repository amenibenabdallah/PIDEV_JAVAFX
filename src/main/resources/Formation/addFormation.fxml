<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="600.0" prefWidth="900.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.Formation.AddFormation">

    <children>
        <!-- Header Pane -->
        <Pane prefHeight="61.0" prefWidth="1126.0" style="-fx-background-color: #b80909;">
            <children>
                <Label layoutX="13.0" layoutY="12.0" text="Formation Manager" textFill="WHITE">
                    <font>
                        <Font name="Arial Rounded MT Bold" size="30.0" />
                    </font>
                </Label>



            </children>
        </Pane>

        <!-- Form Title -->
        <Label layoutX="45.0" layoutY="170.0" prefHeight="42.0" prefWidth="322.0" text="Ajouter une nouvelle formation" textFill="#b80909">
            <font>
                <Font name="System Bold Italic" size="20.0" />
            </font>
        </Label>

        <!-- Main Form -->
        <Pane layoutX="411.0" layoutY="88.0" prefHeight="480.0" prefWidth="450.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 10px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);">
            <children>

                <Label layoutX="40.0" layoutY="30.0" text="Titre :" textFill="#b80909">
                    <font>
                        <Font name="System Italic" size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="titleTextField" layoutX="160.0" layoutY="28.0" prefWidth="250.0" />

                <Label layoutX="40.0" layoutY="70.0" text="Description :" textFill="#b80909">
                    <font>
                        <Font name="System Italic" size="14.0" />
                    </font>
                </Label>
                <TextArea fx:id="descriptionTextArea" layoutX="160.0" layoutY="68.0" prefHeight="60.0" prefWidth="250.0" />

                <Label layoutX="40.0" layoutY="145.0" text="Durée :" textFill="#b80909">
                    <font>
                        <Font name="System Italic" size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="dureeTextField" layoutX="160.0" layoutY="143.0" prefWidth="250.0" />

                <Label layoutX="40.0" layoutY="185.0" text="Niveau : " textFill="#b80909">
                    <font>
                        <Font name="System Italic" size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="niveauTextField" layoutX="160.0" layoutY="183.0" prefWidth="250.0" />

                <Label layoutX="40.0" layoutY="225.0" text="Prix :" textFill="#b80909">
                    <font>
                        <Font name="System Italic" size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="prixTextField" layoutX="160.0" layoutY="223.0" prefWidth="250.0" />

                <Label layoutX="40.0" layoutY="265.0" text="Image :" textFill="#b80909">
                    <font>
                        <Font name="System Italic" size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="imageNameTextField" disable="true" layoutX="160.0" layoutY="263.0" prefWidth="250.0" />

                <!-- Image Choose Button -->
                <Button layoutX="160.0" layoutY="300.0" onAction="#handleImageChoose" prefWidth="250.0" text="Choisir une image :" />

                <Label layoutX="40.0" layoutY="345.0" text="Date de création :" textFill="#b80909">
                    <font>
                        <Font name="System Italic" size="14.0" />
                    </font>
                </Label>
                <DatePicker fx:id="dateCreationPicker" layoutX="160.0" layoutY="343.0" prefWidth="250.0" />

                <Label layoutX="40.0" layoutY="385.0" text="Categorie :" textFill="#b80909">
                    <font>
                        <Font name="System Italic" size="14.0" />
                    </font>
                </Label>
                <ComboBox fx:id="categorieComboBox" layoutX="160.0" layoutY="383.0" prefWidth="250.0" />

                <Label fx:id="errorLabel" layoutX="60.0" layoutY="425.0" textFill="red" />

                <Button layoutX="209.0" layoutY="425.0" onAction="#handleAddFormation" prefHeight="25.0" prefWidth="153.0"
                        style="-fx-background-color: #b80909; -fx-text-fill: white; -fx-font-size: 10pt; -fx-padding: 10px 20px; -fx-background-radius: 20px;"
                        text="Ajouter" />
            </children>
        </Pane>

        <!-- Decorative Image -->
        <ImageView fitHeight="180.0" fitWidth="230.0" layoutX="100.0" layoutY="200.0" preserveRatio="true" />
    </children>
</AnchorPane>
