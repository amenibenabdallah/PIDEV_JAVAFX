<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Pane?>

<VBox spacing="20" xmlns:fx="http://javafx.com/fxml"
      fx:controller="tn.esprit.controllers.Formation.FormationDetailsController"
      alignment="CENTER" style="-fx-padding: 20">

    <HBox alignment="TOP_LEFT">
        <Button fx:id="backButton" text="← Back" style="-fx-background-color: transparent; -fx-font-size: 14px;"/>
    </HBox>

    <Pane prefHeight="480.0" prefWidth="450.0"
          style="-fx-background-color: #FFFFFF; -fx-background-radius: 10px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);">

        <VBox spacing="15" alignment="CENTER" layoutX="20" layoutY="20">
            <!-- Image -->
            <ImageView fx:id="imageView" fitWidth="300" fitHeight="200" style="-fx-background-radius: 10px;"/>

            <!-- Titre -->
            <HBox spacing="5" alignment="CENTER">
                <Label text="Titre :" style="-fx-font-weight: bold;"/>
                <Label fx:id="titreLabel"/>
            </HBox>

            <!-- Description -->
            <HBox spacing="5" alignment="CENTER">
                <Label text="Description :" style="-fx-font-weight: bold;"/>
                <Label fx:id="descriptionLabel" wrapText="true" style="-fx-max-width: 350px;"/>
            </HBox>

            <!-- Catégorie -->
            <HBox spacing="5" alignment="CENTER">
                <Label text="Catégorie :" style="-fx-font-weight: bold;"/>
                <Label fx:id="categorieLabel"/>
            </HBox>

            <!-- Durée -->
            <HBox spacing="5" alignment="CENTER">
                <Label text="Durée :" style="-fx-font-weight: bold;"/>
                <Label fx:id="dureeLabel"/>
            </HBox>

            <!-- Niveau -->
            <HBox spacing="5" alignment="CENTER">
                <Label text="Niveau :" style="-fx-font-weight: bold;"/>
                <Label fx:id="niveauLabel"/>
            </HBox>

            <!-- Prix -->
            <HBox spacing="5" alignment="CENTER">
                <Label text="Prix :" style="-fx-font-weight: bold;"/>
                <Label fx:id="prixLabel"/>
            </HBox>

            <!-- Button -->
            <Button text="Accéder à la formation" onAction="#handleAccessFormation" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        </VBox>
    </Pane>
</VBox>
