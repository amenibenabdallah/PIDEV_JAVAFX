<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tn.esprit.controllers.ListAvisController"
      spacing="20" style="-fx-padding: 20;"
      stylesheets="@ListAvisStyle.css">

    <!-- Top Bar: Title and Button -->
    <HBox alignment="CENTER" spacing="10">
        <Label text="AVIS" styleClass="title-label"/>
        <Region HBox.hgrow="ALWAYS"/> <!-- Spacer to push button to the right -->
        <Button text="Ajouter un avis" onAction="#handleAddAvis" styleClass="button,add-button"/>
    </HBox>

    <!-- Average Rating and Number of Avis with Icons -->
    <HBox spacing="30" alignment="CENTER_LEFT" styleClass="stats-highlight">
        <!-- Average Rating with Smiley Icon and Progress Bar -->
        <VBox spacing="5">
            <HBox spacing="5">
                <Label fx:id="smileyIconLabel" text="ðŸ˜Š" styleClass="icon-label"/>
                <Label fx:id="averageScoreLabel" text="Note Moyenne: 0.0/5" styleClass="score-label"/>
            </HBox>
            <ProgressBar fx:id="scoreProgressBar" progress="0.0" prefWidth="150" styleClass="score-progress"/>
        </VBox>
        <!-- Number of Avis with People Icon -->
        <HBox spacing="5">
            <Label text="ðŸ‘¥" styleClass="icon-label"/>
            <Label fx:id="avisCountLabel" text="Nombre d'avis: 0" styleClass="score-label"/>
        </HBox>
    </HBox>

    <!-- FlowPane for Cards -->
    <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;">
        <FlowPane fx:id="avisFlowPane" hgap="20" vgap="20" style="-fx-padding: 10;"/>
    </ScrollPane>

</VBox>