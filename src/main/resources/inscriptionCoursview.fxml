<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane stylesheets="@style.css"
           prefHeight="600.0" prefWidth="800.0"
           xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="tn.esprit.controllers.InscriptionCoursViewController"
           alignment="CENTER">

    <!-- SPLIT BACKGROUND CONTAINER -->
    <HBox styleClass="split-background" alignment="CENTER">

        <!-- LEFT SIDE: FORM -->
        <VBox spacing="15" alignment="CENTER" styleClass="form-box">
            <!-- Form Title -->
            <Label text="Formulaire d'inscription à une formation" styleClass="form-title" />

            <!-- Form Fields in GridPane -->
            <GridPane hgap="10" vgap="8" alignment="CENTER">
                <padding><Insets top="5" right="20" bottom="5" left="20"/></padding>

                <!-- Nom Apprenant -->
                <Label text="Nom Apprenant :*" styleClass="form-label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtNomApprenant" promptText="Entrer le nom complet" styleClass="form-field" GridPane.rowIndex="1" GridPane.columnIndex="0"/>

                <!-- CIN -->
                <Label text="CIN :*" styleClass="form-label" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="txtCin" promptText="8 chiffres" styleClass="form-field" GridPane.rowIndex="3" GridPane.columnIndex="0"/>

                <!-- Email -->
                <Label text="Email :*" styleClass="form-label" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="txtEmail" promptText="exemple@mail.com" styleClass="form-field" GridPane.rowIndex="5" GridPane.columnIndex="0"/>

                <!-- Nom Formation -->
                <Label text="Nom Formation :*" styleClass="form-label" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                <TextField fx:id="txtNomFormation" promptText="Nom de la formation" styleClass="form-field" GridPane.rowIndex="7" GridPane.columnIndex="0"/>

                <!-- Type de paiement -->
                <Label text="Type de paiement :*" styleClass="form-label" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
                <ComboBox fx:id="typePaiementComboBox" promptText="Choisir une méthode" styleClass="form-field" GridPane.rowIndex="9" GridPane.columnIndex="0"/>

                <!-- ID Apprenant -->
                <Label text="ID Apprenant :*" styleClass="form-label" GridPane.rowIndex="10" GridPane.columnIndex="0"/>
                <TextField fx:id="txtApprenantId" promptText="ID numérique" styleClass="form-field" GridPane.rowIndex="11" GridPane.columnIndex="0"/>

                <!-- ID Formation -->
                <Label text="ID Formation :*" styleClass="form-label" GridPane.rowIndex="12" GridPane.columnIndex="0"/>
                <TextField fx:id="txtFormationId" promptText="ID numérique" styleClass="form-field" GridPane.rowIndex="13" GridPane.columnIndex="0"/>

                <!-- Centered Buttons -->
                <HBox spacing="10" alignment="CENTER" GridPane.rowIndex="14" GridPane.columnIndex="0">
                    <Button text="Annuler" onAction="#handleAnnuler" styleClass="danger-btn"/>
                    <Button fx:id="btnAjouter" text="Ajouter" styleClass="success-btn" onAction="#ajouterInscription"/>
                </HBox>
            </GridPane>
        </VBox>

        <!-- RIGHT SIDE: WELCOME MESSAGE -->
        <VBox styleClass="welcome-box" alignment="CENTER">
            <Label text="Welcome to Formini" styleClass="welcome-title" />
            <Label text="Enter your details to register for a course." styleClass="welcome-subtitle" />
        </VBox>
    </HBox>
</StackPane>