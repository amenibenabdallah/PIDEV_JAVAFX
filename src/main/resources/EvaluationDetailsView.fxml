<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" spacing="20" style="-fx-background-color: transparent; -fx-padding: 20;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.EvaluationDetailsController">
    <!-- Card-like container for the details -->
    <VBox alignment="CENTER" spacing="15" style="-fx-background-color: #FFFFFF; -fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #E0E0E0; -fx-border-width: 1; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3); -fx-padding: 20;">
        <!-- Title -->
        <Label fx:id="titleLabel" text="Détails de l'Évaluation ✨" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #333333;" />

        <!-- Details Grid -->
        <GridPane hgap="15" vgap="10" alignment="CENTER">
            <Label text="Nom :" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #555555;" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <Label fx:id="nomLabel" style="-fx-font-size: 16; -fx-text-fill: #333333;" GridPane.rowIndex="0" GridPane.columnIndex="1" />

            <Label text="Email :" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #555555;" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <Label fx:id="emailLabel" style="-fx-font-size: 16; -fx-text-fill: #333333;" GridPane.rowIndex="1" GridPane.columnIndex="1" />

            <Label text="Score :" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #555555;" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <Label fx:id="scoreLabel" style="-fx-font-size: 16; -fx-text-fill: #333333;" GridPane.rowIndex="2" GridPane.columnIndex="1" />

            <Label text="Niveau :" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #555555;" GridPane.rowIndex="3" GridPane.columnIndex="0" />
            <Label fx:id="niveauLabel" style="-fx-font-size: 16; -fx-text-fill: #333333;" GridPane.rowIndex="3" GridPane.columnIndex="1" />

            <Label text="Statut :" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #555555;" GridPane.rowIndex="4" GridPane.columnIndex="0" />
            <Label fx:id="statusLabel" style="-fx-font-size: 16; -fx-text-fill: #333333;" GridPane.rowIndex="4" GridPane.columnIndex="1" />

            <Label text="Éducation :" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #555555;" GridPane.rowIndex="5" GridPane.columnIndex="0" />
            <Label fx:id="educationLabel" style="-fx-font-size: 16; -fx-text-fill: #333333;" GridPane.rowIndex="5" GridPane.columnIndex="1" />

            <Label text="Expérience :" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #555555;" GridPane.rowIndex="6" GridPane.columnIndex="0" />
            <Label fx:id="experienceLabel" style="-fx-font-size: 16; -fx-text-fill: #333333;" GridPane.rowIndex="6" GridPane.columnIndex="1" />

            <Label text="Compétences :" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #555555;" GridPane.rowIndex="7" GridPane.columnIndex="0" />
            <Label fx:id="skillsLabel" style="-fx-font-size: 16; -fx-text-fill: #333333;" GridPane.rowIndex="7" GridPane.columnIndex="1" />

            <Label text="Certifications :" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #555555;" GridPane.rowIndex="8" GridPane.columnIndex="0" />
            <Label fx:id="certificationsLabel" style="-fx-font-size: 16; -fx-text-fill: #333333;" GridPane.rowIndex="8" GridPane.columnIndex="1" />

            <Label text="Date :" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #555555;" GridPane.rowIndex="9" GridPane.columnIndex="0" />
            <Label fx:id="dateLabel" style="-fx-font-size: 16; -fx-text-fill: #333333;" GridPane.rowIndex="9" GridPane.columnIndex="1" />
        </GridPane>

        <!-- Buttons -->
        <HBox spacing="15" alignment="CENTER">
            <Button fx:id="toggleStatusButton" text="Changer Statut" style="-fx-background-color: #00BFFF; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 8 20 8 20; -fx-background-radius: 5;" onAction="#toggleStatus" />
            <Button fx:id="backButton" text="Retour" style="-fx-background-color: #808080; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 8 20 8 20; -fx-background-radius: 5;" onAction="#goBack" />
        </HBox>
    </VBox>
</VBox>